                            @Html.DropDownList("OrganizationDetail", ViewBag.OrganizationDetailId as SelectList, "Please Select Franchise", new { @id = "OrganizationDetail", @name="OrganizationDetail", @class="form-control" })

                        </div>
                    </div>
               
