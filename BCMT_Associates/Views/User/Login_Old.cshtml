<!DOCTYPE html>
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Login</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="icon" href="~/images/MTS_LOGO.png" type="image/x-icon" />

    <!-- Fonts and icons -->
    <link href="~/adminpanelassets/js/plugin/webfont/webfont.min.js" rel="stylesheet">

    @* @Scripts.Render("~/Content/font")*@
    <script>
        webfont.load({
            google: { "families": ["Lato:300,400,700,900"] },
            custom: { "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular", "Font Awesome 5 Brands", "simple-line-icons"], urls: ['../assets/css/fonts.min.css'] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- CSS Files -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/css/atlantis.css" rel="stylesheet">
    <link href="~/assets/css/demo.css" rel="stylesheet">



</head>
<body class="login">
    <div class="wrapper wrapper-login wrapper-login-full p-0">
        <div class="login-aside w-50 d-flex flex-column align-items-center justify-content-center text-center bg-secondary-gradient">
            @* <img src="~/assets/img/Loginlogo.png" alt="navbar brand" class="navbar-brand">*@
            <h1 class="title fw-bold text-white mb-3">Join us</h1>
            <h1 class="title fw-bold text-white mb-3">AIR ISP </h1>
            <h1 class="title fw-bold text-white mb-3">PAKISTAN</h1>
            <h1 class="title fw-bold text-white mb-3">PRIVATE LIMITED</h1>

            <p class="subtitle text-white op-7"></p>
        </div>
        <div class="login-aside w-50 d-flex align-items-center justify-content-center bg-white">
            <div class="container container-login container-transparent animated fadeIn">
                <h3 class="text-center">Sign In</h3>

                <div class="login-form">
                    <form method="post">
                        <p style="color:red">@ViewBag.Msg</p>
                        <div class="form-group">
                            <label for="Username" class="placeholder"><b>Username</b></label>
                            <input id="Username" name="Username" type="text" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="userpassword" class="placeholder"><b>Password</b></label>
                            <a href="#" id="btnpasswordreset" class="link float-right">Forget Password ?</a>
                            <div class="position-relative">
                                <input id="password" name="password" type="password" class="form-control" required>
                                <div class="show-password">
                                    <i class="icon-eye"></i>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-action-d-flex mb-3">
                            <div class="custom-control custom-checkbox">
                                @*<input type="checkbox" class="custom-control-input" id="rememberme">
                                <label class="custom-control-label m-0" for="rememberme">Remember Me</label>*@
                            </div>
                            <button class="btn btn-secondary col-md-5 float-right mt-3 mt-sm-0 fw-bold" id="btnSignIn">Sign In</button>
                        </div>
                    </form>
                   @* <div class="login-account">
                        <span class="msg">Don't have an account yet ?</span>
                        <a href="#" id="show-signup" class="link">Sign Up</a>
                    </div>*@
                </div>

            </div>

            <div class="container container-signup container-transparent signup animated fadeIn " style="display:none">
                <h3 class="text-center">Sign Up</h3>
               @* <div class="login-form signupForm" id="signupForm" data-parsley-validate>
                    <div class="form-group">
                        <label for="firstName" class="placeholder"><b>First Name</b></label>
                        <input id="firstName" name="FirstName" type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName" class="placeholder"><b>Last Name</b></label>
                        <input id="lastName" name="LastName" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="CNICSS" class="placeholder"><b>CNIC</b></label>
                        <input id="CNICSS" data-inputmask="'mask': '99999-9999999-9'" name="CNICSS" type="text" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="SEmail" class="placeholder"><b>Email</b></label>
                        <input id="SEmail" name="Email" type="text" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="passwords" class="placeholder"><b>Password</b></label>
                        <div class="position-relative">
                            <input id="passwordss" name="passwordss" type="password" class="form-control" required>
                            <div class="show-password">
                                <i class="icon-eye"></i>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="confirmpassword" class="placeholder"><b>Confirm Password</b></label>
                        <div class="position-relative">
                            <input id="confirmpasswordss" name="confirmpasswordss" type="password" class="form-control" required>
                            <div class="show-password">
                                <i class="icon-eye"></i>
                            </div>
                        </div>
                    </div>
                    <div class="row form-sub m-0">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="agree" id="agree" required>
                            <label class="custom-control-label" for="agree">I Agree the terms and conditions.</label>
                        </div>
                    </div>
                    <div class="row form-action">
                        <div class="col-md-6">
                            <a href="#" id="show-signin" class="btn btn-danger btn-link w-100 fw-bold">Go To SignIn</a>
                        </div>
                        <div class="col-md-6">
                            <a href="#" class="btn btn-secondary w-100 fw-bold" id="SignUp">Sign Up</a>
                        </div>
                    </div>
                </div>*@
            </div>

            <div class="container container-reset container-transparent resetPassword animated fadeIn " style="display:none">
                <h3 class="text-center">Reset Password</h3>
                <div class="login-form resetPasswordForm" id="resetPassword" data-parsley-validate>

                    <div class="form-group">
                        <label for="ForgotEmail" class="placeholder"><b>Email</b></label>
                        <input id="ForgotEmail" name="Email" type="text" class="form-control" required>
                    </div>
                    <div class="row form-action">
                        <div class="col-md-6">
                            <a href="#" id="show-signins" class="btn btn-danger btn-link w-100 fw-bold">Go To SignIn</a>
                        </div>
                        <div class="col-md-6">
                            <a href="#" class="btn btn-secondary w-100 fw-bold" id="reset">Reset Password</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="loading" class="hide">
        <div id="loading-content">
            Loading...
        </div>
    </div>
    <script src="~/assets/js/core/jquery.3.2.1.min.js"></script>
    <script src="~/assets/js/plugin/jquery-ui-1.12.1.custom/jquery-ui.min.js"></script>
    <script src="~/assets/js/core/popper.min.js"></script>
    <script src="~/assets/js/core/bootstrap.min.js"></script>
    <script src="~/assets/js/atlantis.min.js"></script>
    <script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/3/jquery.inputmask.bundle.js"></script>
    <script src="~/assets/js/plugin/sweetalert/sweetalert.min.js"></script>
    <script src="~/assets/js/parsley.min.js"></script>
    <script src="~/scripts/crudscript.js"></script>
    <script src="~/scripts/loginscript.js"></script>
    <script src="~/scripts/common.js"></script>
    <script>

        $(document).ready(function () {
            Common.HideLoader();
        })
        $('#show-signup').click(function () {
            $(".signup").css("display", 'block');
            $(".resetPassword").css("display", 'none');
        });

        $('#btnpasswordreset').click(function () {
            debugger
            $(".signup").css("display", 'none');
            $(".container-login").css("display", 'none');

            $(".resetPassword").css("display", 'block');
        });
        $('#SignUp').click(function () {

            LoginScript.SignUp();

        });
        $('#reset').click(function () {

            LoginScript.ForgotPassword();

        });



        $('#show-signins').click(function () {
            $(".signup").css("display", 'none');
            $(".container-login").css("display", 'block');

            $(".resetPassword").css("display", 'none');
        })
        $('input[type=text]').attr('autocomplete', 'off');
        $('input[type=password]').attr('autocomplete', 'off');
        //$('#btnSignIn').click(function () {
        //    LoginScript.Login();

        //});
        $('input[name=CNIC]').inputmask();
        $('input[name=CNICSS]').inputmask();
        localStorage.clear();
    </script>
</body>


</html>


